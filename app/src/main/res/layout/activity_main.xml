<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="1">



            <Switch
                android:id="@+id/switch1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="11시알람\nON/OFF"
                android:fontFamily="@font/spoqahansansneoregular"
                android:textSize="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/gray"
                android:checked="true" />
                <!--android:checked="true"로 설정시 버튼 초기값을 on으로 보여줌 -->

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/gourmet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/spoqahansansneobold"
        android:gravity="bottom|center"
        android:text="KBIO 오늘의 메뉴"
        android:textSize="25dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textSize="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="매일아침 11시, 오늘의 메뉴가 찾아갑니다.\n오늘의 KBIO 구내식당 메뉴를 매일오전 11시에 알림으로 알려드립니다.\n*메뉴는 식재자 수급 및 업체의 사정에 의해 변경될 수 있습니다.\n\n ver 1.1"
        android:textColor="@color/gray"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="251dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="@android:color/transparent"
                android:onClick="OnClickHandler"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/spoqahansansneoregular"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.5"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/spoqahansansneoregular"
        android:onClick="btn1"
        android:text="메뉴 보기"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="501dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />




</LinearLayout>